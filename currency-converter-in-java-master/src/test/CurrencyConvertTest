import org.junit.*;

class CurrencyConterterTest{

    @test 
    void ValideTest(){
        Currency conversion = new Currency();       
        Assert.assertEquals(10,conversion.convert(5,2));
    }

    @test 
    void InferieurInvalideTest(){
        Currency conversion = new Currency();
        conversion.convert(-50,2); 
    }

    @test 
    void SuperieurInvalideTest(){
        Currency conversion = new Currency();
        conversion.convert(5000000,2); 
    }

    @test 
    void FrontiereInferieurInvalideTest(){
        Currency conversion = new Currency();
        conversion.convert(-1,2); 
    }

    @test 
    void FrontiereMinValideTest(){
        Currency conversion = new Currency();
        conversion.convert(0,2); 
    }

    @test 
    void FrontierMaxValideTest(){
        Currency conversion = new Currency();
        conversion.convert(1000000,2); 
    }

    @test 
    void FrontiereSuperieurInvalideTest(){
        Currency conversion = new Currency();
        conversion.convert(1000001,2); 
    }

}